load_module /usr/local/libexec/nginx/ngx_stream_module.so;

worker_processes  1;

events {
    worker_connections  1024;
}

stream {
  upstream kube_nodes_80 {
{% for knode in kube_nodes %}
    server {{knode}}:80;
{% endfor %}
  }
  upstream kube_nodes_443 {
{% for knode in kube_nodes %}
    server {{knode}}:443;
{% endfor %}
  }

  server {
    listen      443;
     proxy_pass kube_nodes_443;
  }
  server {
    listen      80;
    proxy_pass kube_nodes_80;
  }
}
