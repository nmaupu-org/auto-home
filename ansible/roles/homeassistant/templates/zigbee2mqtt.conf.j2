# Home Assistant integration (MQTT discovery)
homeassistant: {{ zigbee2mqtt.homeassistant }}

# allow new devices to join
permit_join: {{ zigbee2mqtt.permit_join }}

# MQTT settings
mqtt:
  # MQTT base topic for zigbee2mqtt MQTT messages
  base_topic: {{ zigbee2mqtt.base_topic }}
  # MQTT server URL
  server: '{{ zigbee2mqtt.mqtt.url }}'
  # MQTT server authentication, uncomment if required:
  user: {{ zigbee2mqtt.mqtt.username }}
  password: {{ zigbee2mqtt.mqtt.password }}

# Serial settings
serial:
  # Location of CC253X USB sniffer
  port: {{ zigbee2mqtt.serial.port }}
  disable_led: true

advanced:
  log_level: info
  #baudrate: {{ zigbee2mqtt.serial.baudrate }}
  #rtscts: {{ zigbee2mqtt.serial.rtscts }}

devices:
  {{ zigbee2mqtt.devices | to_yaml | indent(width=2, indentfirst=False) }}
