!-------------------------------------------------------------------------------
! Xft settings
!-------------------------------------------------------------------------------

Xft.dpi:                    96
Xft.antialias:              true
Xft.rgba:                   rgb
Xft.hinting:                true
Xft.hintstyle:              hintslight

!-------------------------------------------------------------------------------
! URxvt settings
! Colours lifted from Solarized (http://ethanschoonover.com/solarized)
! More info at:
! http://pod.tst.eu/http://cvs.schmorp.de/rxvt-unicode/doc/rxvt.1.pod
!-------------------------------------------------------------------------------

URxvt.shading:              25
URxvt.depth:                32
URxvt.geometry:             90x30
URxvt.transparent:          false
URxvt.fading:               0
URxvt.urgentOnBell:         true
! URxvt.visualBell:           true
URxvt.loginShell:           true
URxvt.saveLines:            500000
URxvt.internalBorder:       3
xft:URxvt.lineSpace:            0

! Fonts
URxvt.allow_bold:           true
URxvt*font: xft:DejaVu Sans Mono:pixelsize=13,style=Regular,xft:Inconsolata\ for\ Powerline:pixelsize=14
URxvt*boldFont: xft:DejaVu Sans Mono:pixelsize=13,style=Regular,xft:Inconsolata\ for\ Powerline:pixelsize=13

URxvt.intensityStyles: false

! Fix font space
URxvt*letterSpace: -1

! Scrollbar

URxvt.scrollStyle:          rxvt
URxvt.scrollBar:            false
! jump scrolling
URxvt*jumpScroll:           true
! skip scrolling
URxvt*skipScroll:           false
! scroll to bottom on output
URxvt*scrollTtyOutput:      false
! scroll to bottom when a non-special key is pressed
URxvt*scrollTtyKeypress:    true
! scroll to bottom when tty receives new lines
URxvt*scrollWithBuffer:     false
! scroll page by page
URxvt*mouseWheelScrollPage: false

! Perl extensions
! URxvt.perl-ext-common:      default,matcher
! URxvt.matcher.button:       1
! URxvt.urlLauncher:          firefox

! Disable ctrl+shift "Keycap Picture Insert Mode"
URxvt.iso14755: false
URxvt.iso14755_52: false

! Cursor
URxvt.cursorBlink:          false
URxvt.cursorColor:          #657b83
URxvt.cursorUnderline:      false

! Pointer
URxvt.pointerBlank:         true

!!Source http://github.com/altercation/solarized

*background: #002b36
*foreground: #c5cfd3
!!*fading: 40
*fadeColor: #002b36
*cursorColor: #93a1a1
*pointerColorBackground: #586e75
*pointerColorForeground: #93a1a1

!! black dark/light
*color0: #073642
*color8: #002b36

!! red dark/light
*color1: #dc322f
*color9: #cb4b16

!! green dark/light
*color2: #859900
*color10: #586e75

!! yellow dark/light
*color3: #b58900
*color11: #657b83

!! blue dark/light
*color4: #268bd2
*color12: #839496

!! magenta dark/light
*color5: #d33682
*color13: #6c71c4

!! cyan dark/light
*color6: #2aa198
*color14: #93a1a1

!! white dark/light
*color7: #eee8d5
*color15: #fdf6e3

!! Increase / decrease fonts on the fly
!! https://github.com/majutsushi/urxvt-font-size
URxvt.perl-ext-common:  font-size,default,matcher
URxvt.keysym.Control-Shift-Up:    perl:font-size:increase
URxvt.keysym.Control-Shift-Down:  perl:font-size:decrease
URxvt.keysym.Control-Shift-equal: perl:font-size:reset

!!
!! Some remaps to use in vim
!!
!! Remap C-S-T to <esc>t
URxvt.keysym.Control-0x54: \033t
!! Remap C-S-W to <esc>w
URxvt.keysym.Control-0x57: \033w
!! Remap C-S-Left/Right to esc-f and esc-g
URxvt.keysym.Control-Shift-Left: \033f
URxvt.keysym.Control-Shift-Right: \033g
